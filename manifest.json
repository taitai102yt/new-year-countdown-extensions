{
  "manifest_version": 3,
  "name": "New Year Countdown (Leap-aware)",
  "description": "うるう年を考慮して次の新年までカウントダウンし、残り日数をバッジに自動表示します。",
  "version": "1.2",

  "action": {
    "default_popup": "popup.html",
    "default_title": "New Year Countdown",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "alarms"
  ]
}
